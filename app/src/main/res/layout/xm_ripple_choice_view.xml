<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E9E9E">
    <ImageView
        android:layout_width="480dp"
        android:layout_height="480dp"
        app:srcCompat="@mipmap/img1"
        />

    <cn.iterlog.myapplication.view.ripplechoice.RippleChoiceView
        android:id="@+id/choicview"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="2dp"
        app:borderWidth="2dp"
        app:checkedColor="@color/green"
        app:backgroundColor="#77000000"
        app:borderColor="@color/white"
        app:crossColor="@android:color/white"
        app:checked="true"
        app:number="2"
        app:crossType="number"
        app:rippleduration="300"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
